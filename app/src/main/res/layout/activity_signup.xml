<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1"
    android:background="@color/colorPrimary"
    tools:context="com.example.hellen.smartmarket.SignupActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_margin="16dp"
        android:src="@drawable/whitelogo_01"/>


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:hint="Correo Electrónico"
        android:textColor="@color/colorWhite"
        android:ems="10"
        android:backgroundTint="@color/colorWhite"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:hint="Nombre"
        android:textColor="@color/colorWhite"
        android:ems="10"
        android:backgroundTint="@color/colorWhite"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:hint="Contraseña"
        android:backgroundTint="@color/colorWhite"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etConfirm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:ems="10"
        android:textColor="@color/colorWhite"
        android:hint="Confirmar contraseña"
        android:backgroundTint="@color/colorWhite"
        android:inputType="textPassword" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginTop="35dp"
        fancy:fb_borderColor="@color/colorWhite"
        fancy:fb_borderWidth="2dp"
        fancy:fb_radius="30dp"
        fancy:fb_fontIconResource="&#xf007;"
        fancy:fb_iconPosition="left"
        fancy:fb_text=" CREAR CUENTA"
        fancy:fb_focusColor="@color/colorWhite"
        fancy:fb_defaultColor="@color/colorPrimary"/>


</LinearLayout>
