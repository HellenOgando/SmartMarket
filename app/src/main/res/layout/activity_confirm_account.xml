<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1"
    android:background="@color/colorPrimary"
    tools:context="com.example.hellen.smartmarket.ConfirmAccountActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_margin="16dp"
        android:src="@drawable/whitelogo_01"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Confirmación de Cuenta" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:hint="Correo Electrónico"
        android:textColor="@color/colorWhite"
        android:ems="10"
        android:backgroundTint="@color/colorWhite"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:hint="Código de Confirmación"
        android:textColor="@color/colorWhite"
        android:ems="10"
        android:backgroundTint="@color/colorWhite"
        android:inputType="textPersonName" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginTop="35dp"
        fancy:fb_borderColor="@color/colorWhite"
        fancy:fb_borderWidth="2dp"
        fancy:fb_radius="30dp"
        fancy:fb_fontIconResource="&#xf058;"
        fancy:fb_iconPosition="left"
        fancy:fb_text=" CONFIRMAR"
        fancy:fb_focusColor="@color/colorWhite"
        fancy:fb_defaultColor="@color/colorPrimary"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnRequest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginTop="15dp"
        fancy:fb_borderColor="@color/colorWhite"
        fancy:fb_borderWidth="2dp"
        fancy:fb_radius="30dp"
        fancy:fb_fontIconResource="&#xf1d8;"
        fancy:fb_iconPosition="left"
        fancy:fb_text=" SOLICITAR UN CÓDIGO"
        fancy:fb_defaultColor="@color/colorWhite"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_textColor="@color/colorPrimary"/>

</LinearLayout>
